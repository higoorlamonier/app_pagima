    <!-- HOME -->
    <div id="home" class="home-bg" style="background-image: url('assets/img/background-1.jpg')" data-stellar-background-ratio="0.6">
        <div class="home-overlay">
            <div class="container">
                <div class="row">
                    <div class="home-content">
                        <h1 id="text-rotator">
                            <div>PAGIMA</div>
                            <div>Certificação Digital</div>
                            <div>Corretora de Seguros</div>
