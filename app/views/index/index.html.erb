        </div>
    </div>
    <!-- END HOME -->

    <!-- ABOUT -->
    <section id="about">
        <div class="container">
            <div class="row">
                <div data-aos="fade-up">
                    <div class="col-md-12">
                        <h2>Certificados</h2>
                    </div>

                    <div class="col-md-12 about-content">
                        <div class="row">
                            <% todos = Produto.all %>
                            <% todos.each do |produto| %>

                            <div class="col-sm-6 col-md-4">
                                <div class="thumbnail">
                                    <div class="caption">
                                        <h3><%= produto.nome %></h3>
                                        <p><%= produto.descricao %></p>
                                        <p><a href="#" class="btn btn-primary" role="button"><%= produto.preco %></a> <a href="<%= produto.link %>" class="btn btn-default" role="button">Comprar</a></p>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END ABOUT -->

    <!-- SERVICES -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Serviços</h2>
                </div>

                <div class="col-md-12 services-content">
                    <div class="row">

                    <% todos = Servico.all %>
                    <% todos.each do |servico| %>
                        <div class="col-md-4 col-sm-6">
                            <div class="services-item">
                                <i class="<%= servico.icone %>"></i>
                                <h4>
                                    <%= servico.nome %>
                                    
                                </h4>
                                <p>
                                    <%= servico.descricao %>
                                </p>
                            </div>
                        </div>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END SERVICES -->

    <!-- CONTACT -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div data-aos="fade-up">
                    <div class="col-md-12">
                        <h2>Contato</h2>
                    </div>

                    <div class="col-md-12 contact-content">
                        <div class="row">
                            <div class="col-md-8 col-sm-6 col-xs-12">
                                <div class="row">
                                    <form id="ajax-contact" name="contact" method="post" action="assets/php/contact.php">
                                        <div class="col-md-4 col-xs-12">
                                            <div class="form-group">
                                                <input type="text" name="name" id="name" class="form-control" placeholder="Nome" required>
                                                <p class="help-block text-danger"></p>
                                            </div>
                                            <div class="form-group">
                                                <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                                                <p class="help-block text-danger"></p>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" name="subject" id="subject" class="form-control" placeholder="Assunto" required>
                                                <p class="help-block text-danger"></p>
                                            </div>
                                        </div>

                                        <div class="col-md-4 col-xs-12">
                                            <div class="form-group">
                                                <textarea name="message" id="message" class="form-control" rows="6" placeholder="Mensagem" required></textarea>
                                                <p class="help-block text-danger"></p>
                                            </div>
                                        </div>

                                        <div class="col-md-8 col-xs-12">
                                            <button id="submit" type="submit" name="submit" class="btn btn-solid btn-send">Enviar</button>

                                            <div id="form-messages"></div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="adress-item">
                                    <i class="fa fa-map-marker fa-2x"></i>
                                    <p>Bairro Sao Benedito, Tristão de Castro Nº 835</p>
                                </div>
                                <div class="adress-item">
                                    <i class="fa fa-phone fa-2x"></i>
                                    <p>(34) 3338-4533</p>
                                </div>
                                <div class="adress-item">
                                    <i class="fa fa-envelope fa-2x"></i>
                                    <p>pagima@pagima.com.br</p>
                                </div>

                                <div class="m-bottom"></div>

                                <ul class="social">
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-facebook"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fa fa-instagram"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END CONTACT -->

